@model IEnumerable<Shqipify.Models.UniversityViewModel>

    <button class="btn-primary mb-3">
    <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="Create">Create University</a>
    </button>
<div class="d-flex justify-content-center align-items-center flex-column">

    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Actions</th>
              
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var uni in Model)
                {
                    <tr>
                        <th scope="row">@uni.Id</th>
                        <td>@uni.Name</td>
                        <td>
                            <div style="d-flex">
                               
                                <form method="post" asp-action="Delete" asp-route-id="@uni.Id" >
                                    <div style="d-flex">
                                        <a asp-action="Edit" asp-route-id="@uni.Id" class="btn btn-warning">Edit</a>
                                     <button type="submit" class="btn btn-danger">Delete</button>
                                                 </div>
                                </form>
                               
                            </div>
                           
                        </td>  
                     
                        
                    </tr>
                }
            }
            else
            {
                <h1>No universities</h1>
            }
         
          
           
        </tbody>
    </table>
  


</div>